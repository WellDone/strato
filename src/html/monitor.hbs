{{> _partials/header}}
<div id="wrapper">
  {{> _partials/nav}}
    <div id="page-wrapper">
      <div class="row">
          <div class="col-lg-12">
              <h3 class="page-header"><span id='monitor-name'>&lt;Loading...&gt;</span><!-- <i id='monitor-name-edit' class="right-edit fa fa-pencil-square-o"></i> --></h3>
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">
          <div class="col-lg-8">
              <p>Last report: <span style='font-weight:bold' id='last-report-time'></span></p>
          </div>
          <div class="col-lg-4">
              <div id="monitor-map"></div>
          </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-line-chart fa-fw"></i> Data
                <div class="pull-right">
                    Metric: 
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" >
                            <span id='metric-selected'>...</span>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right" role="menu" id="metric-selector">
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div id="monitor-data-chart" style="width:100%"></div>
            </div>
            <!-- /.panel-body -->
          </div>
        <!-- /.panel -->
        </div>
      </div>
    </div>
    <!-- /#page-wrapper -->
</div>

