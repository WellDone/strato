{{> _partials/header}}
<div id="wrapper">
  {{> _partials/nav}}
    <div id="page-wrapper">
      <div class="row">
      	<div class="col-lg-12">
      		<h1>Settings</h1>
      		<h3><i class="fa fa-users fa-fw"></i> <span id="organization"></span></h3>
		    </div>
			</div>
      <!-- /.row -->
      <div class="row org-settings">
          <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-header">
                  <i class="fa fa-link fa-fw"></i> Webhooks
                </div>
                  <div class="panel-body">
                      <div class="table-responsive">
                          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                              <thead>
                                  <tr>
                                      <th>Destination</th>
                                      <th>Type</th>
                                      <th></th>
                                  </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td>...</td>
                                  <td>...</td>
                                  <td></td>
                                </tr>
                              </tbody>
                          </table>
                      </div>
                      <!-- /.table-responsive -->
                  </div>
                  <!-- /.panel-body -->
                  <div class="panel-footer">
                    <button id="add-hook-button" class="btn btn-default">Add Webhook</button>
                  </div>
              </div>
              <!-- /.panel -->
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>

    <div id="add-hook-modal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Add Webhook</h4>
          </div>
          <div class="modal-body">
            <input type="text" name="webhook-url" class="form-control" placeholder="Destination URL">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button id="add-hook-save" type="button" class="btn btn-primary">Create Webbhook</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- /#page-wrapper -->
</div>

